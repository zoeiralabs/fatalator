{
    "name": "Fatalator",
    "description": "Notifica o usuário com um aviso engraçado quando ele acessar uma rede social ou um site de música, vídeo, etc.",
    "version": "1.0",
    "icons": {
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "manifest_version": 2,
    "content_scripts": [
        {
            "js": [
                "background.js"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "web_accessible_resources": [
        "images/big-head.png"
    ],
    "permissions": [
        "activeTab"
    ]
}
